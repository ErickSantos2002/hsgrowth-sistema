# ==================== Application ====================
ENVIRONMENT=production
DEBUG=False
PROJECT_NAME=HSGrowth CRM API
VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
API_PORT=8000

# ==================== Database ====================
# PostgreSQL connection
DATABASE_URL=postgresql://hsgrowth:CHANGE_ME@localhost:5432/hsgrowth_crm

# Database credentials (para Docker)
DB_HOST=localhost
DB_PORT=5432
DB_USER=hsgrowth
DB_PASSWORD=CHANGE_ME
DB_NAME=hsgrowth_crm

# ==================== JWT Authentication ====================
# IMPORTANTE: Gere uma chave secreta forte em produção
# Exemplo: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Redis ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_ME

# ==================== Celery ====================
CELERY_BROKER_URL=redis://:CHANGE_ME@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:CHANGE_ME@localhost:6379/0
CELERY_WORKERS=4

# ==================== Email (Microsoft 365) ====================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=seu_email@empresa.com
SMTP_PASSWORD=sua_senha
SMTP_FROM=seu_email@empresa.com
SMTP_FROM_NAME=HSGrowth CRM

# ==================== Frontend ====================
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ==================== Logs ====================
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=90

# ==================== Cache ====================
CACHE_TTL=3600
CACHE_MAXSIZE=1000

# ==================== Automations ====================
AUTOMATION_MAX_PER_ACCOUNT=50
AUTOMATION_CRON_INTERVAL_MINUTES=1
EMAIL_FAILURE_THRESHOLD=3
EMAIL_GROUP_THRESHOLD=5

# ==================== Transfers ====================
TRANSFER_LIMIT_PER_MONTH=10
TRANSFER_APPROVAL_REQUIRED=False
TRANSFER_APPROVAL_EXPIRATION_HOURS=72
TRANSFER_MAX_BATCH_SIZE=50

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=60

# ==================== File Upload ====================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf","doc","docx","xls","xlsx"]

# ==================== Development Only ====================
# Define como true para rodar seed automaticamente (apenas dev)
RUN_SEED=false
